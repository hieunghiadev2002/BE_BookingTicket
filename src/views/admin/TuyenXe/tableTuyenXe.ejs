<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Quản Lý Tuyến Xe</title>
  <!-- Link Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.6.2/axios.min.js"></script>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f6f9;
      margin: 0;
      padding: 0;
    }

    .container {
      max-width: 1000px;
      margin: 20px auto;
      padding: 20px;
      background-color: #ffffff;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    h1 {
      text-align: center;
      color: #333;
      font-weight: 300;
    }

    .table-responsive {
      margin-top: 20px;
    }

    .notification {
      display: none;
      padding: 15px;
      margin: 20px 0;
      border-radius: 5px;
      text-align: center;
      font-weight: bold;
    }

    .notification.success {
      background-color: #28a745;
      color: #ffffff;
    }

    .notification.error {
      background-color: #dc3545;
      color: #ffffff;
    }
  </style>
</head>

<body>
  <div class="container">
    <h1>Quản Lý Tuyến Xe</h1>
    <button class="btn btn-success mb-3" onclick="showAddModal()">Thêm Tuyến Xe Mới</button>
    <div class="table-responsive">
      <table class="table table-bordered table-hover">
        <thead class="table-primary">
          <tr>
            <th>ID</th>
            <th>Tên Tuyến</th>
            <th>Điểm Đi</th>
            <th>Điểm Đến</th>
            <th>Quãng Đường</th>
            <th>Thời Gian Di Chuyển</th>
            <th>Trạng Thái</th>
            <th>Thao Tác</th>
          </tr>
        </thead>
        <tbody id="routeTableBody">
          <!-- Dữ liệu tuyến xe sẽ được chèn vào đây -->
        </tbody>
      </table>
    </div>
  </div>

  <!-- Modal Form -->
  <div id="routeModal" class="modal fade" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 id="modalTitle" class="modal-title">Thêm Tuyến Xe</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form id="routeForm" onsubmit="handleSubmit(event)">
            <input type="hidden" id="routeId">
            <div class="mb-3">
              <label for="tenTuyenXe" class="form-label">Tên Tuyến Xe</label>
              <input type="text" id="tenTuyenXe" class="form-control" required>
            </div>
            <div class="mb-3">
              <label for="diemDi" class="form-label">Điểm Đi</label>
              <select id="diemDi" class="form-control" required>
                <option value="">Chọn tỉnh/thành phố</option>
              </select>
            </div>
            <div class="mb-3">
              <label for="diemDen" class="form-label">Điểm Đến</label>
              <select id="diemDen" class="form-control" required>
                <option value="">Chọn tỉnh/thành phố</option>
              </select>
            </div>
            <div class="mb-3">
              <label for="quangDuong" class="form-label">Quãng Đường (km)</label>
              <input type="number" id="quangDuong" class="form-control" required>
            </div>
            <div class="mb-3">
              <label for="timeDiChuyen" class="form-label">Thời Gian Di Chuyển</label>
              <input type="text" id="timeDiChuyen" class="form-control" required>
            </div>
            <div class="mb-3">
              <label for="benXe" class="form-label">Bến Xe</label>
              <input type="text" id="benXe" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-primary w-100">Lưu</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Notification Messages -->
  <div id="notification" class="notification"></div>

  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    const API_URL = 'http://localhost:3000/api/tuyen-xe';
    const TINH_THANH_API_URL = 'http://localhost:3000/api/tinh-thanh';
    const axiosInstance = axios.create({
      baseURL: API_URL,
      headers: { 'Content-Type': 'application/json' }
    });

    axiosInstance.interceptors.request.use(
      (config) => {
        const token = localStorage.getItem('accessToken');
        if (token) config.headers['Authorization'] = `Bearer ${token}`;
        return config;
      },
      (error) => Promise.reject(error)
    );

    let routes = [];
    async function loadTinhThanh() {
      try {
        const response = await axios.get(TINH_THANH_API_URL);
        if (response.data.status === true) {
          const tinhThanhList = response.data.data;
          const diemDiSelect = document.getElementById('diemDi');
          const diemDenSelect = document.getElementById('diemDen');

          tinhThanhList.forEach((tinh) => {
            const option = document.createElement('option');
            option.value = tinh.tenTinhThanh;
            option.text = tinh.tenTinhThanh;

            // Thêm option vào cả "Điểm đi" và "Điểm đến"
            diemDiSelect.appendChild(option.cloneNode(true));
            diemDenSelect.appendChild(option.cloneNode(true));
          });
        } else {
          showNotification('Không thể tải danh sách tỉnh thành', true);
        }
      } catch (error) {
        console.error('Lỗi khi tải tỉnh thành:', error);
        showNotification('Có lỗi xảy ra khi tải tỉnh thành', true);
      }
    }
    function showAddModal() {
      document.getElementById('modalTitle').innerText = 'Thêm Tuyến Xe';
      document.getElementById('routeForm').reset();
      document.getElementById('routeId').value = '';
      const modal = new bootstrap.Modal(document.getElementById('routeModal'));
      modal.show();
    }

    function showEditModal(id) {
      const route = routes.find(route => route.id === id);
      if (route) {
        document.getElementById('modalTitle').innerText = 'Chỉnh Sửa Tuyến Xe';
        document.getElementById('routeId').value = route.id;
        document.getElementById('tenTuyenXe').value = route.tenTuyenXe;
        document.getElementById('diemDi').value = route.diemDi;
        document.getElementById('diemDen').value = route.diemDen;
        document.getElementById('quangDuong').value = route.quangDuong;
        document.getElementById('timeDiChuyen').value = route.timeDiChuyen;
        document.getElementById('benXe').value = route.benXe;
        const modal = new bootstrap.Modal(document.getElementById('routeModal'));
        modal.show();
      }
    }

    function showNotification(message, isError = false) {
      const notification = document.getElementById('notification');
      notification.innerText = message;
      notification.className = `notification ${isError ? 'alert alert-danger' : 'alert alert-success'} text-center`;
      notification.style.display = 'block';
      setTimeout(() => {
        notification.style.display = 'none';
      }, 3000);
    }

    async function fetchRoutes() {
      try {
        const response = await axiosInstance.get('');
        if (response.data.status === "true") {
          routes = response.data.result.map(route => ({
            id: route._id,
            tenTuyenXe: route.tenTuyenXe,
            diemDi: route.diemDi,
            diemDen: route.diemDen,
            timeDiChuyen: route.timeDiChuyen,
            quangDuong: route.quangDuong,
            benXe: route.benXe,
            status: route.__v === 0 ? 'active' : 'inactive'
          }));
          renderTable(routes);
        } else {
          showNotification('Không thể tải danh sách tuyến xe', true);
        }
      } catch (error) {
        console.error(error);
        showNotification('Có lỗi xảy ra khi tải dữ liệu', true);
      }
    }

    function renderTable(routes) {
      const tbody = document.getElementById('routeTableBody');
      tbody.innerHTML = '';
      routes.forEach(route => {
        const tr = document.createElement('tr');
        tr.innerHTML = `
          <td>${route.id}</td>
          <td>${route.tenTuyenXe}</td>
          <td>${route.diemDi}</td>
          <td>${route.diemDen}</td>
          <td>${route.quangDuong} km</td>
          <td>${route.timeDiChuyen}</td>
          <td>${route.status === 'active' ? 'Hoạt động' : 'Tạm dừng'}</td>
          <td>
            <button class="btn btn-sm btn-primary edit-btn" onclick="showEditModal('${route.id}')">Sửa</button>
            <button class="btn btn-sm btn-danger delete-btn" onclick="deleteRoute('${route.id}')">Xóa</button>
          </td>
        `;
        tbody.appendChild(tr);
      });
    }

    document.addEventListener('DOMContentLoaded', () => {
      if (!localStorage.getItem('accessToken')) window.location.href = '/admin/login';
      fetchRoutes();
      loadTinhThanh();
    });
  </script>
</body>

</html>