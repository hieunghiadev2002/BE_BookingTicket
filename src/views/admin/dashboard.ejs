<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard</title>
  <!-- Import Font Awesome for icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    :root {
      --primary-color: #3498db;
      --sidebar-width: 250px;
      --header-height: 60px;
      --sidebar-bg: #2c3e50;
      --hover-bg: #34495e;
    }

    body {
      min-height: 100vh;
      overflow-x: hidden;
    }

    /* Sidebar Styles */
    .sidebar {
      position: fixed;
      top: 0;
      left: 0;
      height: 100vh;
      width: var(--sidebar-width);
      background: var(--sidebar-bg);
      color: white;
      transition: all 0.3s ease;
      z-index: 1000;
    }

    .sidebar-header {
      height: var(--header-height);
      display: flex;
      align-items: center;
      padding: 0 20px;
      background: rgba(0, 0, 0, 0.1);
    }

    .sidebar-header h2 {
      font-size: 1.2rem;
      color: white;
    }

    .sidebar-menu {
      padding: 20px 0;
    }

    .menu-item {
      padding: 15px 20px;
      display: flex;
      align-items: center;
      cursor: pointer;
      transition: all 0.3s ease;
      color: #ecf0f1;
      text-decoration: none;
    }

    .menu-item:hover {
      background: var(--hover-bg);
    }

    .menu-item.active {
      background: var(--primary-color);
    }

    .menu-item i {
      margin-right: 10px;
      width: 20px;
      text-align: center;
    }

    .logout-button {
      position: absolute;
      bottom: 20px;
      left: 20px;
      right: 20px;
      padding: 12px;
      background: #e74c3c;
      color: white;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.3s ease;
    }

    .logout-button:hover {
      background: #c0392b;
    }

    .logout-button i {
      margin-right: 10px;
    }

    /* Main Content Styles */
    .main-content {
      margin-left: var(--sidebar-width);
      padding: 20px;
      min-height: 100vh;
      background: #f5f6fa;
      transition: all 0.3s ease;
    }

    /* Header Styles */
    .header {
      height: var(--header-height);
      background: white;
      padding: 0 20px;
      display: flex;
      align-items: center;
      justify-content: space-between;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      margin-bottom: 20px;
    }

    .menu-toggle {
      display: none;
      background: none;
      border: none;
      color: var(--sidebar-bg);
      font-size: 1.5rem;
      cursor: pointer;
    }

    /* Welcome Section */
    .welcome-section {
      background: white;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      margin-bottom: 20px;
    }

    .welcome-section h1 {
      color: #2c3e50;
      margin-bottom: 10px;
    }

    .welcome-section p {
      color: #7f8c8d;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .menu-toggle {
        display: block;
      }

      .sidebar {
        transform: translateX(-100%);
      }

      .sidebar.active {
        transform: translateX(0);
      }

      .main-content {
        margin-left: 0;
      }

      .main-content.pushed {
        margin-left: var(--sidebar-width);
      }
    }
  </style>
</head>

<body>
  <!-- Sidebar -->
  <div class="sidebar" id="sidebar">
    <div class="sidebar-header">
      <h2>TRANG QUẢN TRỊ</h2>
    </div>
    <div class="sidebar-menu">
      <a href="/admin/dashboard" class="menu-item active">
        <i class="fas fa-home"></i>
        <span>Trang Chủ</span>
      </a>
      <a href="/users" class="menu-item">
        <i class="fas fa-users"></i>
        <span>Quản Lý User</span>
      </a>
      <a href="/routes" class="menu-item">
        <i class="fas fa-route"></i>
        <span>Quản Lý Tuyến Xe</span>
      </a>
      <a href="/trips" class="menu-item">
        <i class="fas fa-bus"></i>
        <span>Quản Lý Chuyến Xe</span>
      </a>
      <a href="/tickets" class="menu-item">
        <i class="fas fa-ticket-alt"></i>
        <span>Quản Lý Vé</span>
      </a>
    </div>
    <button class="logout-button" onclick="handleLogout()">
      <i class="fas fa-sign-out-alt"></i>
      <span>Đăng Xuất</span>
    </button>
  </div>

  <!-- Main Content -->
  <div class="main-content" id="mainContent">
    <div class="header">
      <button class="menu-toggle" id="menuToggle">
        <i class="fas fa-bars"></i>
      </button>
      <div class="user-info">
        <i class="fas fa-user"></i>
        <span id="userName">Admin</span>
      </div>
    </div>

    <div class="welcome-section">
      <h1>Welcome to Admin Dashboard</h1>
      <p>Chọn danh mục từ menu bên trái để quản lý hệ thống</p>
    </div>
  </div>

  <script>
    // Toggle Sidebar
    const menuToggle = document.getElementById('menuToggle');
    const sidebar = document.getElementById('sidebar');
    const mainContent = document.getElementById('mainContent');

    menuToggle.addEventListener('click', () => {
      sidebar.classList.toggle('active');
      mainContent.classList.toggle('pushed');
    });

    // Active Menu Item
    const menuItems = document.querySelectorAll('.menu-item');
    menuItems.forEach(item => {
      item.addEventListener('click', () => {
        menuItems.forEach(i => i.classList.remove('active'));
        item.classList.add('active');
      });
    });

    // Handle Logout
    function handleLogout() {
      // Clear tokens
      localStorage.removeItem('accessToken');
      localStorage.removeItem('refreshToken');

      // Redirect to login page
      window.location.href = '/login';
    }

    // Check Authentication
    function checkAuth() {
      const accessToken = localStorage.getItem('accessToken');
      if (!accessToken) {
        window.location.href = '/login';
      }
    }

    // Run on page load
    checkAuth();

    // Check auth status when tab becomes visible
    document.addEventListener('visibilitychange', () => {
      if (document.visibilityState === 'visible') {
        checkAuth();
      }
    });

    // Optional: Load user info from token
    function loadUserInfo() {
      const accessToken = localStorage.getItem('accessToken');
      if (accessToken) {
        // Decode token and update user info
        // This is a placeholder - implement actual token decoding
        document.getElementById('userName').textContent = 'Admin';
      }
    }

    loadUserInfo();
  </script>
</body>

</html>